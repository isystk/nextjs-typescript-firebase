{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "es2017"],
    "jsx": "preserve",
    "sourceMap": true,
    "removeComments": true,
    "noEmit": true,
    
    /* 厳密なチェック */
    "strict": true,
    "noImplicitAny": true, // Any型を許可しない
    "strictNullChecks": true, // Nullが入る可能性を許容しない
    "noImplicitThis": true,

    "allowJs": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true, // 利用されていない宣言はエラーとする
    "noUnusedParameters": true, // 利用されていない引数はエラーとする
    "resolveJsonModule": true,
    "skipLibCheck": true, // 外部モジュールはチェックしない
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "exclude": ["node_modules"],
  "include": [
    "next-env.d.ts",
    "jest.config.js",
    "next.config.js",
    "next-env.d.ts",
    "src/**/*.ts", 
    "src/**/*.tsx", 
    "test/**/*.ts"
  ]
}

